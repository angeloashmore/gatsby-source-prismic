{
  "name": "@prismicio/gatsby",
  "private": true,
  "engines": {
    "node": ">=12.18.4"
  },
  "scripts": {
    "clean": "yarn workspaces run clean",
    "test": "yarn workspaces run test",
    "build": "yarn workspaces run build",
    "publish:canary": "lerna publish --canary",
    "publish:alpha": "lerna publish --dist-tag alpha --preid alpha",
    "publish:beta": "lerna publish --dist-tag beta --preid beta",
    "publish:latest": "lerna publish"
  },
  "workspaces": {
    "packages": [
      "packages/gatsby-source-prismic",
      "packages/gatsby-plugin-prismic-previews",
      "packages/*",
      "test-site"
    ],
    "nohoist": [
      "**/husky",
      "**/husky/**"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "^12.1.4",
    "@commitlint/config-conventional": "^12.1.4",
    "@types/sinon": "^10.0.2",
    "@typescript-eslint/eslint-plugin": "^4.28.2",
    "@typescript-eslint/parser": "^4.28.2",
    "ava": "^3.15.0",
    "concurrently": "^6.2.0",
    "esbuild": "^0.12.15",
    "eslint": "^7.30.0",
    "eslint-plugin-deprecation": "^1.2.1",
    "eslint-plugin-react": "^7.24.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "gatsby": "^3.9.0",
    "gatsby-plugin-utils": "^1.9.0",
    "husky": "^7.0.1",
    "lerna": "^4.0.0",
    "msw": "^0.30.1",
    "postcss": "^8.3.5",
    "postcss-import": "^14.0.2",
    "prettier": "^2.3.2",
    "rimraf": "^3.0.2",
    "sinon": "^11.1.1",
    "tailwindcss": "^2.2.4",
    "ts-eager": "^2.0.2",
    "tslib": "^2.3.0",
    "type-fest": "^1.2.1",
    "typescript": "^4.3.5"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "trailingComma": "all",
    "proseWrap": "always",
    "printWidth": 80
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  }
}
