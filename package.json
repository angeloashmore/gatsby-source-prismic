{
  "name": "@prismicio/gatsby",
  "private": true,
  "engines": {
    "node": ">=12.22"
  },
  "scripts": {
    "clean": "yarn workspaces run clean",
    "test": "yarn workspaces run test",
    "build": "yarn workspaces run build",
    "release": "multi-semantic-release --dry-run --ignore-packages=packages/test-site"
  },
  "workspaces": {
    "packages": [
      "packages/gatsby-source-prismic",
      "packages/gatsby-plugin-prismic-previews",
      "packages/*"
    ],
    "nohoist": [
      "**/husky",
      "**/husky/**"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "^12.1.1",
    "@commitlint/config-conventional": "^12.1.1",
    "@semantic-release/changelog": "^5.0.1",
    "@semantic-release/git": "^9.0.0",
    "@types/sinon": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^4.22.0",
    "@typescript-eslint/parser": "^4.22.0",
    "ava": "^3.15.0",
    "concurrently": "^6.0.2",
    "esbuild": "^0.11.12",
    "eslint": "^7.24.0",
    "eslint-plugin-deprecation": "^1.2.0",
    "eslint-plugin-react": "^7.23.2",
    "eslint-plugin-react-hooks": "^4.2.0",
    "gatsby": "^3.4.2",
    "gatsby-plugin-utils": "^1.4.0",
    "husky": "^6.0.0",
    "msw": "^0.28.1",
    "multi-semantic-release": "^2.8.0",
    "postcss": "^8.2.10",
    "postcss-import": "^14.0.1",
    "prettier": "^2.2.1",
    "rimraf": "^3.0.2",
    "sinon": "^10.0.0",
    "tailwindcss": "^2.1.1",
    "ts-eager": "^1.1.3",
    "tslib": "^2.2.0",
    "type-fest": "^1.0.2",
    "typescript": "^4.2.4"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "trailingComma": "all",
    "proseWrap": "always",
    "printWidth": 80
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "release": {
    "branches": [
      "main",
      {
        "name": "next",
        "channel": "next",
        "prerelease": "rc"
      },
      {
        "name": "beta",
        "channel": "beta",
        "prerelease": true
      },
      {
        "name": "alpha",
        "channel": "alpha",
        "prerelease": true
      }
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/changelog",
      "@semantic-release/npm",
      [
        "@semantic-release/git",
        {
          "assets": [
            "src/**",
            "package.json",
            "CHANGELOG.md"
          ],
          "message": "chore(release): ${nextRelease.version}\n\n${nextRelease.notes} [skip ci]"
        }
      ],
      "@semantic-release/github"
    ]
  }
}
